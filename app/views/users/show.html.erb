<h1><%= @user.username.capitalize %></h1>
<p><%= @user.bio %></p>
<% if current_user %>
    <% if current_user.id == @user.id %>
        <div class="bioform">
            <%= simple_form_for @user do |f| %>
                <%= f.input :bio, label: "Your Profile", placeholder: "Let everyone know who you are!" %>
                <%= f.submit "Update Profile", class: "btn btn-primary" %>
            <% end %>
    <% end %>
<% end %>
